<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_window_focused="false"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/color_border_item" />

            <size android:height="50dp" />

            <solid android:color="@color/white" />

            <padding android:left="15dp" android:right="15dp" />
        </shape></item>
    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/color_border_item" />

            <size android:height="50dp" />

            <solid android:color="@color/light_blue" />

            <padding android:left="15dp" android:right="15dp" />
        </shape></item>

</selector>